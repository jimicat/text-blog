---
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A simple text-based blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/posts">Posts</a>
          <a href="/tags">Tags</a>
          <a href="mailot:941104c@gmail">Email</a>
        </div>
        <ThemeToggle />
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Text Blog. All rights reserved.</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --text-color: #2c3e50;
    --text-muted: #666;
    --background-color: #f8f9fa;
    --link-color: #3498db;
    --link-hover-color: #2980b9;
    --border-color: #eee;
    --code-bg: #f1f3f5;
  }

  :root.dark {
    --text-color: #f8f9fa;
    --text-muted: #a0aec0;
    --background-color: #1a202c;
    --link-color: #63b3ed;
    --link-hover-color: #90cdf4;
    --border-color: #2d3748;
    --code-bg: #2d3748;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: var(--background-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  body {
    margin: 0 auto;
    padding: 2rem 1rem;
    max-width: 65ch;
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
  }

  nav a {
    color: var(--link-color);
    text-decoration: none;
  }

  nav a:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }

  footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  h1, h2, h3 {
    line-height: 1.2;
  }

  a {
    color: var(--link-color);
  }

  a:hover {
    color: var(--link-hover-color);
  }

  /* Markdown content styles */
  article {
    max-width: 65ch;
    margin: 0 auto;
  }

  article img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  article h1 {
    font-size: 2.5rem;
    margin: 2rem 0 1.5rem;
  }

  article h2 {
    font-size: 1.75rem;
    margin: 2rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  article h3 {
    font-size: 1.25rem;
    margin: 1.5rem 0 1rem;
  }

  article p {
    margin: 1.25rem 0;
  }

  article ul, article ol {
    padding-left: 1.5rem;
    margin: 1.25rem 0;
  }

  article li {
    margin: 0.5rem 0;
  }

  article blockquote {
    margin: 1.5rem 0;
    padding: 0.5rem 1rem;
    border-left: 4px solid var(--border-color);
    color: var(--text-muted);
  }

  article code {
    background: var(--code-bg);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'SF Mono', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
  }

  article pre {
    background: var(--code-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 0.9em;
  }

  article pre code {
    background: none;
    padding: 0;
    border-radius: 0;
  }

  article hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0;
  }

  article table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  article th, article td {
    padding: 0.5rem;
    border: 1px solid var(--border-color);
    text-align: left;
  }

  article th {
    background: var(--code-bg);
  }
</style>